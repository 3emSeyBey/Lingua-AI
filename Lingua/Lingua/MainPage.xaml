        <ImageButton Source="voicetsbtn.png" Clicked="VTSButtonClicked" BackgroundColor="Transparent" WidthRequest="50" HeightRequest="50" Margin="0,0,0,20"/>
        <ImageButton Source="stoturialbtn.png" Clicked="STutButtonClicked" BackgroundColor="Transparent" WidthRequest="50" HeightRequest="50" Margin="0,0,0,20"/>
